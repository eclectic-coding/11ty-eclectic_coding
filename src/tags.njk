---
pagination:
    data: collections
    size: 1
    alias: tag
filter:
- all
- article
- articles
addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
    title: Tagged “{{ tag }}”
permalink: "tags/{{ tag | slugify }}/"
---
{% set titleText %}
    Tagged with “{{ tag }}”
{%- endset %}
{% SectionTitle title=titleText %}

{% set articleList = collections[tag] %}
{%- for article in articleList -%}
    {% include "partials/_articletagcard.njk" %}
{%- endfor -%}
