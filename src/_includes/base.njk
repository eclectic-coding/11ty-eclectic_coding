{%- set pageTitle %}{{ title + " | " if title }}{{ meta.siteName }}{% endset -%}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="eleventy">
    <title>{{ pageTitle }}</title>
    <link rel="icon" href="{{ '/favicon.png' | url }}" />
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}" />
  </head>
  <body class="site-layout">

    <nav class="navbar" role="navigation" aria-label="Main Navigation">
      <div class="navbar__container">
        <a href="/" class="navbar__container--logo">
          <div>EclecticCoding</div>
        </a>

        <div class="navbar__btn-group">
          <!-- dark mode controls -->
          <button id="mobile-menu-btn" class="navbar__menu-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path fill-rule="evenodd"
                    d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
            </svg>
          </button>
        </div>

        <div class="navbar__desktop--wrapper">
          <ul role="list" class="navbar__links">
            <li role="listitem"><a href="/" class="nav-link">Home</a></li>
            <li role="listitem"><a href="#" class="nav-link">About Me</a></li>
            <li role="listitem"><a href="#" class="nav-link">Contact</a></li>
          </ul>
          <!-- start dark mode controls -->
          <!-- end dark mode controls -->
        </div>

        <div id="mobile-menu" class="navbar__mobile">
          <button class="navbar__mobile--close-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path
                  d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
            </svg>
          </button>

          <div class="navbar__mobile--wrapper">
            <div class="navbar__mobile--menu">
              <ul role="list" class="">
                <li role="listitem" class="nav-item"><a href="#" class="nav-link">Home</a></li>
                <li role="listitem" class="nav-item"><a href="#" class="nav-link">About Me</a></li>
                <li role="listitem" class="nav-item"><a href="#" class="nav-link">Contact</a></li>
              </ul>
            </div>
          </div>

        </div>

    </nav>


    <main class="container content">
      {{ content | safe }}
    </main>

    <footer>
      <div class="row container__fluid text-align-center mx-auto">
        <p>
          <a href="https://www.eclecticcoding.com">EclecticCoding.com</a>
          &copy; 2022 <a href="mailto:me@eclecticcoding.com">Chuck Smith</a>
        </p>
        <span class="social--icons">
          <a href="https://dev.to/eclecticcoding" aria-label="Dev profile">
            <img src="/images/dev.svg" alt="Dev profile" width="24px" height="24px">
          </a>
          <a href="https://github.com/eclectic-coding/" aria-label="GitHib profile">
            <img src="/images/github.svg" alt="GitHib profile" width="24px" height="24px">
          </a>
          <a href="https://www.linkedin.com/in/dev-chuck-smith/" aria-label="LinkedIn profile">
            <img src="/images/linkedin.svg" alt="LinkedIn profile" width="24px" height="24px">
          </a>
          <a href="https://twitter.com/EclecticCoding" aria-label="Twitter profile">
            <img src="/images/twitter.svg" alt="Twitter profile" width="24px" height="24px">
          </a>
        </span>
      </div>
    </footer>

    <script src="js/script.js"></script>
  </body>
</html>
