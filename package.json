{
  "name": "11ty-sass-skeleton",
  "version": "1.2.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "tokens": "npx a11y-color-tokens --outputDirPath='src/sass' --colorTokensPath='src/_data/colors.js'",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch:eleventy": "npx @11ty/eleventy --serve",
    "build:sass": "sass src/sass:public/css",
    "build:eleventy": "npx @11ty/eleventy",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "start": "npm-run-all tokens build:sass --parallel watch:*",
    "build": "npm-run-all tokens build:sass build:eleventy",
    "lint": "stylelint src/sass/**/*.scss src/sass/**/**/*.scss src/sass/**/**/**/*.scss",
    "lint:fix": "npm run lint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5t3ph/11ty-sass-skeleton.git"
  },
  "author": "5t3ph",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "a11y-color-tokens": "^0.5.0",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.7",
    "stylelint": "^14.4.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
